.row
  .col-md-12
    .page-header
      %h1
        -if @target.new_record?
          New
        Target
.row
  .col-md-8
    = semantic_form_for(@target, :url => (@target.new_record? ? admin_conference_targets_path : admin_conference_target_path(@conference.short_title, @target)), remote: (true if @target.new_record?)) do |f|
      = f.input :due_date, as: :string, input_html: { class: 'target-due-date-datepicker', id: 'due_date' }, label: 'Until when do you want to have '
      = f.input :target_count, label: 'this amount of ', input_html: { id: 'target_count' }
      = f.input :unit, as: :select, label: 'Unit', class: 'form-control', collection: Target.units.values, include_blank: false, label: 'units ', id: 'unit'
      %p.text-right
        = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
